{
  "analysis": {
    "analyzer": {
      "autocomplete": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase", "edge_ngram_filter"]
      },
      "kautocomplete": {
        "type": "custom",
        "tokenizer": "whitespace",
        "filter": ["lowercase", "edge_ngram_filter"]
      }
    },
    "filter": {
      "edge_ngram_filter": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 15
      }
    }
  }
}
