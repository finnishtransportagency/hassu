{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    "workarounds:all"
  ],
  "timezone": "Europe/Helsinki",
  "schedule": "after 9pm on sunday",
  "updateNotScheduled": false,
  "branchConcurrentLimit": 5,
  "prConcurrentLimit": 5,
  "baseBranches": [
    "main"
  ],
  "major": {
    "enabled": false
  },
  "minor": {
    "enabled": true
  },
  "gradle": {
    "enabled": false
  },
  "dockerfile": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "excludePackagePatterns": [
        "^@aws-cdk",
        "^aws-cdk",
        "^@aws-sdk",
        "^aws-sdk",
        "^@sls-next/cdk-construct"
      ],
      "excludePackageNames": [
        "next",
        "eslint-config-next",
        "localstack/localstack",
        "@types/react"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch"
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchPackageNames": [
        "@types/react"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": false,
      "groupName": "ignored",
      "groupSlug": "ignored"
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "excludePackagePatterns": [
        "^@aws-cdk",
        "^aws-cdk",
        "^@aws-sdk",
        "^aws-sdk",
        "^@sls-next/cdk-construct"
      ],
      "excludePackageNames": [
        "next",
        "eslint-config-next",
        "localstack/localstack"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "enabled": false,
      "groupName": "all minor dependencies",
      "groupSlug": "all-minor"
    },
    {
      "matchPackagePatterns": [
        "^@aws-cdk",
        "^aws-cdk"
      ],
      "groupName": "AWS CDK",
      "groupSlug": "aws-cdk"
    },
    {
      "description": "@sls-next/cdk-construct=3.7.0 => next=11",
      "matchPackagePatterns": [
        "^@sls-next/cdk-construct"
      ],
      "allowedVersions": "3.7.0",
      "groupName": "sls-next/cdk-construct"
    },
    {
      "matchPackageNames": [
        "next",
        "eslint-config-next"
      ],
      "matchUpdateTypes": "patch",
      "groupName": "nextjs"
    },
    {
      "matchPackagePatterns": [
        "^@aws-sdk",
        "^aws-sdk"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "aws-sdk"
    },
    {
      "matchPackageNames": [
        "localstack/localstack"
      ],
      "allowedVersions": "1.3",
      "groupName": "localstack"
    }
  ]
}
